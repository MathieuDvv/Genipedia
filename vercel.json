{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/src/scripts/(.*\\.js)",
      "headers": {
        "content-type": "application/javascript; charset=utf-8",
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/src/scripts/$1"
    },
    {
      "src": "^/src/styles/(.*\\.css)",
      "headers": {
        "content-type": "text/css; charset=utf-8",
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/src/styles/$1"
    },
    {
      "src": "^/src/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/src/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 